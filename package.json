{
  "name": "email-assistant",
  "version": "1.0.0",
  "description": "A server-side email assistant for daily schedule reminders and work summaries",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --max-old-space-size=2048 dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc && npm run copy-static",
    "copy-static": "cp -r src/public dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:ci",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "email",
    "assistant",
    "scheduler",
    "reminder"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@google/generative-ai": "^0.15.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.7.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "helmet": "^8.1.0",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "openai": "^4.55.0",
    "uuid": "^11.1.0",
    "winston": "^3.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/imap": "^0.8.37",
    "@types/jest": "^30.0.0",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  }
}
