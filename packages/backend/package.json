{
  "name": "@email-assistant/backend",
  "version": "1.0.0",
  "description": "Backend server for email assistant with modern dependency injection architecture",
  "type": "module",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "start": "node --max-old-space-size=2048 dist/index.js",
    "dev": "pnpm build && node dist/index.js",
    "dev:watch": "tsc --watch",
    "build": "node esbuild.config.js",
    "build:prod": "NODE_ENV=production node esbuild.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "create-admin": "npx tsx scripts/create-admin.ts",
    "benchmark": "npx tsx scripts/benchmark.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@email-assistant/shared": "workspace:*",
    "@google/generative-ai": "^0.24.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "openai": "^5.9.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/imap": "^0.8.37",
    "@types/jest": "^30.0.0",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^24.0.13",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.25.6",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
