# ========================================
# 生产环境配置模板
# ========================================
# 复制此文件为 .env 并修改相应配置

# ========================================
# 安全配置 (必须修改)
# ========================================
# JWT密钥 - 必须是32字符以上的强随机字符串
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-chars-long

# API密钥 - 用于系统集成 (可选)
API_KEY=your-api-key-for-system-integration

# ========================================
# 邮件配置
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password
IMAP_TLS=true
IMAP_REJECT_UNAUTHORIZED=true
EMAIL_CHECK_INTERVAL_MS=30000

# ========================================
# 用户配置
# ========================================
USER_EMAIL=your-email@gmail.com
USER_NAME=Your Name

# ========================================
# AI配置
# ========================================
AI_PROVIDER=openai

# OpenAI配置
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek配置
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Google配置
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-pro

# Anthropic配置
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Azure OpenAI配置
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ========================================
# 应用配置
# ========================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=warn

# ========================================
# 安全配置
# ========================================
# CORS允许的域名 (逗号分隔)
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# 速率限制配置
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=900000
RATE_LIMIT_PASSWORD_RESET_ATTEMPTS=3
RATE_LIMIT_PASSWORD_RESET_WINDOW=3600000
RATE_LIMIT_GENERAL_ATTEMPTS=100
RATE_LIMIT_GENERAL_WINDOW=900000

# JWT配置
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# 功能配置
# ========================================
# 邮件转发配置
EMAIL_FORWARDING_ENABLED=false
EMAIL_FORWARDING_MARK_AS_READ=true

# 时间配置
MORNING_REMINDER_TIME=09:00
EVENING_REMINDER_TIME=18:00
TIMEZONE=Asia/Shanghai

# 上下文配置
MAX_CONTEXT_LENGTH=8000
CONTEXT_COMPRESSION_THRESHOLD=6000

# ========================================
# 监控和日志配置
# ========================================
# 健康检查配置
HEALTH_CHECK_INTERVAL=300000

# 日志配置
LOG_MAX_FILES=30
LOG_MAX_SIZE=100MB

# ========================================
# 数据库配置 (如果需要)
# ========================================
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://localhost:6379